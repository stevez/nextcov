{
  "name": "nextcov",
  "version": "0.10.0",
  "description": "Collect test coverage for Playwright E2E tests in Next.js applications",
  "author": "Steve Zhang",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nextcov": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "import": "./dist/playwright/index.js",
      "require": "./dist/playwright/index.cjs"
    }
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "v8-coverage",
    "istanbul",
    "coverage",
    "next.js",
    "server components",
    "rsc",
    "playwright",
    "vitest"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@bcoe/v8-coverage": "^1.0.0",
    "@inquirer/prompts": "^8.1.0",
    "@jridgewell/sourcemap-codec": "^1.4.0",
    "ast-v8-to-istanbul": "^0.3.0",
    "convert-source-map": "^2.0.0",
    "glob": "^11.0.0",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-lib-source-maps": "^5.0.0",
    "istanbul-reports": "^3.1.0",
    "monocart-coverage-reports": "^2.0.0",
    "vite": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.49.0",
    "@types/convert-source-map": "^2.0.3",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-lib-source-maps": "^4.0.4",
    "@types/istanbul-reports": "^3.0.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "rimraf": "^6.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevez/nextcov.git"
  }
}
